@page "/user/createuser"
@using MindKey.Client.Services
@using MindKey.Client.Shared
@attribute [Authorize]
@inject IAlertService AlertService
@inject IUserService UserService
@inject NavigationManager navManager
@inject PageHistoryState PageHistoryState

<div class="pagetitle">
    <h1>User</h1>
</div>


<div class="card info-card">
    <div class="card-body">
        <h5 class="card-title">User <span>| Add</span></h5>

        <Form ButtonText="Create User" user="@user" loading="@loading"
              OnValidSubmit="@CreateUser" />
    </div>
</div>

@code {
    bool loading = false;

    User user = new User();

    async Task CreateUser()
    {
        loading = true;
        try
        {
            await UserService.AddIdea(user);
            AlertService.Success("User added successfully", keepAfterRouteChange: true);
            if (PageHistoryState.CanGoBack())
            {
                navManager.NavigateTo(PageHistoryState.GetGoBackPage());
            }
            else
            {
                navManager.NavigateTo("/user/1");
            }
        }
        catch (Exception ex)
        {
            AlertService.Error(ex.Message);
            loading = false;
            StateHasChanged();
        }
    }
}